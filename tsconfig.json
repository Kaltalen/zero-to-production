{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "strict": true,
    "typeRoots": ["node_modules/@types", "./typings"],
    "lib": ["es2018", "dom", "esnext.asynciterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@workspace/frontend/common/ui/side-nav": [
        "libs/frontend/common/ui/side-nav/src/index.ts"
      ],
      "@workspace/frontend/shared/data-access": [
        "libs/frontend/shared/data-access/src/index.ts"
      ],
      "@workspace/frontend/shared/auth": [
        "libs/frontend/shared/auth/src/index.ts"
      ],
      "@workspace/frontend/utils/test-helpers": [
        "libs/frontend/utils/test-helpers/src/index.ts"
      ],
      "@workspace/frontend/common/ui/custom-material": [
        "libs/frontend/common/ui/custom-material/src/index.ts"
      ],
      "@workspace/frontend/common/ui/toolbar": [
        "libs/frontend/common/ui/toolbar/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
